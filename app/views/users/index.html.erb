<%= render 'user_info', user: @user %>

<%= render 'books/new_book', new_book: @new_book %>

<h1>Users</h1>

<table>
    <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="1"></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= image_tag user.get_profile_image(80,80) %></td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user.id) %></td>
            </tr>
        <% end %>
    </tbody>
</table>
    