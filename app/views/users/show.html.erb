<%= render 'user_info', user: @user %>

<%= render 'books/new_book', new_book: @new_book %>

<h1>Books</h1>

    <table>
        <thead>
            <tr>
                <th colspan="1"></th>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
                <tr>
                    <td><%= image_tag book.user.get_profile_image(80, 80) %></td>
                    <td><%=  link_to book.title, book_path(book.id) %></td>
                    <td><%= book.body %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    