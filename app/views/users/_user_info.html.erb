<h1 class="mb-2">User info</h1>

<%= image_tag user.get_profile_image(100, 100) %><br>

<table class="table">
    <tbody>
        <tr>
            <th>name</th>
            <th><%= user.name %></th>
        </tr>
        <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
        </tr>
    </tbody>
</table>

<div class="row">
    <div class="col-12">
        <%= link_to edit_user_path(user), class: 'btn btn-outline-secondary btn-block' do  %>
            <i class="fas fa-user-cog"></i>
        <% end %>
    </div>
</div>