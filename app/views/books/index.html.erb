<% if @new_book.errors.any? %>
    <%= @new_book.errors.count %> error prohibited this object from being saved:
    <ul>
        <% @new_book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
    
<%= render 'users/user_info', user: @user %>
    
<%= render 'new_book', new_book: @new_book %>


<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><%= image_tag book.user.get_profile_image(80, 80) %></td>
                <td><%=  link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
            </tr>
        <% end %>
    </tbody>
</table>
    
    


