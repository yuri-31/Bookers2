
<body>
    <h1>Books</h1>

    <% if @book.errors.any? %>
        <%= @book.errors.count %> error prohibited this object from being saved:
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>
    
    <table>
        <thead>
            <tr>
                <th colspan="1"></th>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
                <tr>
                    <td><%= image_tag book.user.get_profile_image(80, 80) %></td>
                    <td><%=  link_to book.title, book_path(book.id) %></td>
                    <td><%= book.body %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    
    
    <h2>New Book</h2>

    
    
    <%= form_with model: @book, url: books_path(@book.id), method: :post do |f| %>
    
    <label>Title</label><br>
    <%= f.text_field :title %><br>
    
    <label>Opinion</label><br>
    <%= f.text_area :body %><br>
    
    <%= f.submit 'Create Book' %>
    
    <% end %>

</body>

