<h1>New Book</h1>
    
    <%= form_with model: new_book, url: books_path(new_book.id), method: :post do |f| %>
        
        <label>Title</label><br>
        <%= f.text_field :title %><br>
        
        <label>Opinion</label><br>
        <%= f.text_area :body %><br>
        
        <%= f.submit 'Create Book' %>
    
    <% end %>