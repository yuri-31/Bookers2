<div class="container">
    <div class="row">
        <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
            <h1>Editing Book</h1>
            
            <% if @book.errors.any? %>
                <%= pluralize(@book.errors.count, "error") %> prohibited this object from being saved:
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            <% end %>
            
            <%= form_with model: @book, url: book_path(@book.id), method: :patch do |book| %>
            
                <label>Title</label><br>
                <%= book.text_field :title, class: 'col-12 mb-3' %><br>
                
                <label>Opinion</label><br>
                <%= book.text_area :body, class: 'col-12 mb-3' %><br>
                
                <%= book.submit 'Update Book', class: 'btn btn-success mb-3' %><br>
                
            <%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %>
            
            <% end %>
        </div>
    </div>
</div>

